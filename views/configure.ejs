<h1><b>Choose Controller</b></h1>
<div class="col-md-9 personal-info">
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">Controller:</label>
            <div class="col-lg-8">
              <div class="ui-select">
                <select id="sel_location" class="form-control">
                <% for(var i=0;i< location.length;i++){%>
                  <option value="<%=location[i].location%>"><%=location[i].location%></option>
                 <%}%>                     
                </select>
              </div>
            </div>
          </div>
        </form>
        <form >
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">
                  <input type="submit" ng-click = "find_controller_sensor();" class="btn btn-primary" value="Find Sensors">
                  <span></span>
                  <input type="reset" class="btn btn-default" value="Cancel">
                </div>
            </div>
        </form>
      </div>