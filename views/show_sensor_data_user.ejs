        <form>
         <table id="example" class="table table-striped table-bordered" cellspacing="0" width="50%">
            <thead>
                <tr>
                    <th>Sensor Name</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Ozone(mg)</th>
                    <th>N2O(mg)</th>
                    <th>PPM(mg)</th>
                    <th>CO(mg)</th>
                    <th>SO2(mg)</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i=0 ; i<data.length; i++){ %>
                <tr>
                    <td><%= sensor_name %></td>
                    <td><%=data[i].ReportingArea %></td>
                    <td><%=data[i].DateObserved %></td>
                    <td><%=data[i].Ozone %></td>
                    <td><%=data[i].N2O %></td>
                    <td><%=data[i].PPM %></td>
                    <td><%=data[i].CO %></td>
                    <td><%=data[i].SO2 %></td>
                </tr>
             <% } %>
            </tbody>
         </table>
        </form>
            

